{
  "mcpServers": {
    "terraform": {
      "command": "nix",
      "args": ["run", ".#terraformMcpServer", "--", "stdio"]
    },
    "cloudflare": {
      "type": "http",
      "url": "https://mcp.cloudflare.com/mcp"
    },
    "mackerel": {
      "command": "nix",
      "args": ["run", ".#mackerelMcpServer", "--"],
      "env": {
        "MACKEREL_APIKEY": "${MACKEREL_APIKEY}"
      }
    }
  }
}
