{
  "permissions": {
    "allow": [
      "Bash(tailscale status:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform providers:*)",
      "Bash(terraform show:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Stop",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && nix fmt"
          }
        ]
      }
    ]
  }
}
