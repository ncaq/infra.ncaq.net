{
  "permissions": {
    "allow": [
      "Bash(tailscale status:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform providers:*)",
      "Bash(terraform show:*)",
      "mcp__cloudflare__search",
      "mcp__mackerel__get_alert",
      "mcp__mackerel__get_alert_logs",
      "mcp__mackerel__get_dashboard",
      "mcp__mackerel__get_host_metrics",
      "mcp__mackerel__get_monitor",
      "mcp__mackerel__get_service_metrics",
      "mcp__mackerel__get_trace",
      "mcp__mackerel__list_alerts",
      "mcp__mackerel__list_dashboards",
      "mcp__mackerel__list_db_query_stats",
      "mcp__mackerel__list_hosts",
      "mcp__mackerel__list_http_server_stats",
      "mcp__mackerel__list_monitors",
      "mcp__mackerel__list_services",
      "mcp__mackerel__list_traces",
      "mcp__terraform__get_latest_module_version",
      "mcp__terraform__get_latest_provider_version",
      "mcp__terraform__get_module_details",
      "mcp__terraform__get_policy_details",
      "mcp__terraform__get_provider_capabilities",
      "mcp__terraform__get_provider_details",
      "mcp__terraform__search_modules",
      "mcp__terraform__search_policies",
      "mcp__terraform__search_providers"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Stop",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && nix fmt"
          }
        ]
      }
    ]
  }
}
