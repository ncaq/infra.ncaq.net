{
  "permissions": {
    "allow": [
      "Bash(source .env.local)",
      "Bash(tailscale status:*)",
      "Bash(terraform plan:*)",
      "Bash(terraform version:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Stop",
        "hooks": [
          {
            "type": "command",
            "command": "cd $CLAUDE_PROJECT_DIR && nix fmt"
          }
        ]
      }
    ]
  }
}
